@model IEnumerable<GoogleAuthentication.Models.Product>



@{
ViewData["Title"] = "Index";
Layout = "~/Views/Shared/_Layout.cshtml";
}



<center> <h1>Order List</h1></center>



<p>
<a class ="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-striped">
<thead>
<tr>
<th>
@Html.DisplayNameFor(model => model.ProductId)
</th>
<th>
@Html.DisplayNameFor(model => model.ProductName)
</th>
<th>
@Html.DisplayNameFor(model => model.ProductDescription)
</th>
<th>
@Html.DisplayNameFor(model => model.ProductPrice)
</th>
<th>
@Html.DisplayNameFor(model => model.Quantity)
</th>
<th>
@Html.DisplayNameFor(model => model.ProductPicture)
</th>
<th></th>
</tr>
</thead>
<tbody>
@foreach (var item in Model) {
<tr>
<td>
@Html.DisplayFor(modelItem => item.ProductId)
</td>
<td>
@Html.DisplayFor(modelItem => item.ProductName)
</td>
<td>
@Html.DisplayFor(modelItem => item.ProductDescription)
</td>
<td>
@Html.DisplayFor(modelItem => item.ProductPrice)
</td>
<td>
@Html.DisplayFor(modelItem => item.Quantity)
</td>
<td>
<img src="@Url.Content(@item.ProductPicture)" alt="@item.ProductName" height="50" width="50"/>
</td>
<td>
@Html.ActionLink("Edit", "Edit", new { id=item.ProductId }, new { @class = "btn btn-warning" }) |
@Html.ActionLink("Details", "Details", new { id=item.ProductId }, new { @class = "btn btn-success" }) |
@Html.ActionLink("Delete", "Delete", new { id=item.ProductId }, new { @class = "btn btn-danger" })
</td>
</tr>
}
</tbody>
</table>



